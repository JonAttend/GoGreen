<h1 class="mb-3">Drive</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Type</th>
      <th scope="col">Name</th>
      <th scope="col">Last Modify</th>
      <th scope="col">Size</th>
    </tr>
  </thead>
  <tbody>
    {{#each drive}}
      <tr>
        <td>
          {{#if this.folder}}
            <i class="fa-solid fa-folder" style="color:#fed96a;"></i>
          {{else if this.word}}
            <i class="fa-regular fa-file-word" style="color:#185abd;"></i>
          {{else if this.powerpoint}}
            <i class="fa-regular fa-file-powerpoint" style="color:#c43e1c;"></i>
          {{else if this.excel}}
            <i class="fa-regular fa-file-excel" style="color:#107c41;"></i>
          {{else if this.drawing}}
            <i class="fa-solid fa-file-pen" style="color:#185abd;"></i>
          {{else if this.pdf}}
            <i class="fa-regular fa-file-pdf"></i>
          {{else if this.onenote}}
            <i class="fa-regular fa-file-lines" style="color:#7719aa;"></i>
          {{else if this.image}}
            <i class="fa-regular fa-file-image"></i>
          {{else}}
            <i class="fa-solid fa-file" style="color:#fed96a;"></i>
          {{/if}}
        </td>
        <td>{{this.name}}</td>
        <td>{{this.lastModifiedDateTime}}</td>
        <td>{{this.size}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<!-- </LayoutSnippet> -->
